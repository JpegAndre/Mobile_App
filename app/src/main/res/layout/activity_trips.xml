<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Trips">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/button_shape"
                android:fontFamily="@font/inter_18pt"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="18sp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_bold"
                android:text="Your Trips"
                android:textSize="22sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textNoTrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_18pt_bold"
            android:text="No trips found"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutBack"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTrips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="400dp"
            app:layout_constraintTop_toBottomOf="@id/layoutBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"
            tools:listitem="@layout/item_trip"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
